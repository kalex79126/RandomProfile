<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RandomProfileMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RandomProfileMAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"/>
        
        <ShellContent
            Title="Profiles"
            ContentTemplate="{DataTemplate views:ProfileDetailedPage}"/>

        <ShellContent
            Title="Profile Images"
            ContentTemplate="{DataTemplate views:ProfileImageDetailedPage}"/>

    </TabBar>
    
</Shell>
